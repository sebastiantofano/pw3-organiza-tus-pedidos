@using DAL.Modelos
@{
    List<Articulo> selectArticulos = ViewBag.Articulos;
    List<Cliente> selectClientes = ViewBag.Clientes;
    Dictionary<Articulo, int> ArticulosYCantidadesDelPedido = ViewBag.ArticulosYCantidadesDelPedido;
}
<div class="row">
    <div class="col-lg-8 p-r-0 title-margin-right">
        <div class="page-header">
            <div class="page-title">
                <h2><i class="ti-pencil-alt text-default"></i> Nuevo Pedido</h2>
            </div>
        </div>
    </div>
</div>
<!-- /# row -->
<section id="main-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="form-validation">
                        <form asp-area="UsuarioGeneral" asp-controller="Pedidos" asp-action="AgregarPedido" method="POST">
                            <div class="form-group row">
                                <label class="col-form-label" for="val-username">
                                    Cliente <span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-7">
                                    <select class="form-control" id="select-cliente" name="idCliente">
                                        <option value="">Seleccione un cliente</option>
                                        @foreach (Cliente cliente in selectClientes)
                                        {
                                            <option value="@cliente.IdCliente">Nro Cliente: @cliente.Numero -  Nombre: @cliente.Nombre</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-form-label" for="val-skill">
                                    Artículo <span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-7">
                                    <select class="form-control" id="select-articulo" name="IdArticulo">
                                        <option value="">Seleccione un artículo</option>
                                        @foreach (Articulo articulo in selectArticulos)
                                        {
                                            <option value="@articulo.IdArticulo">Código: @articulo.Codigo -  Descripción: @articulo.Descripcion</option>
                                        }
                                    </select>
                                </div>
                                <label class="col-form-label" for="val-digits">
                                    Cantidad <span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-2">
                                    <input type="text" class="form-control" id="val-cantidad"
                                           name="Cantidad" placeholder="Ingrese cantidad">
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-12 d-flex align-items-center">
                                    <button type="submit" class="btn btn-info col-lg-4 m-1">Agregar Pedido</button>
                                    <button type="submit" class="btn btn-info m-1">Agregar Pedido y cargar otro</button>
                                    <a href="javascript:history.back(-1);" class="btn btn-default ml-auto ">Volver</a>
                                </div>
                            </div>
                        </form>

                        <div class="form-group row">
                            <label class="col-form-label" for="val-suggestions">Comentario </label>
                            <div class="col-lg-10">
                                <textarea class="form-control"
                                          placeholder="¿Que comentario te gustaría ponerle al pedido?"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-title">
                    <h4>Contenido del pedido</h4>

                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Descripción</th>
                                    <th>Código</th>
                                    <th>Cantidad</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ArticulosYCantidadesDelPedido != null)
                                {
                                    @foreach (KeyValuePair<Articulo, int> articuloEnPedido in ArticulosYCantidadesDelPedido)
                                    {
                                        <tr>
                                            <td>@articuloEnPedido.Key.Descripcion</td>
                                            <td>@articuloEnPedido.Key.Codigo</td>
                                            <td>@articuloEnPedido.Value</td>
                                            <td>
                                                <button type="button"
                                                        class="btn btn-danger btn-flat btn-addon btn-sm">
                                                    <i class="ti-close"></i>Quitar
                                                </button>
                                            </td>
                                        </tr>
                                    }

                            }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


</section>