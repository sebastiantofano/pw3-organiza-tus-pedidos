@{ 
    //string nombreUsuario = (string) ViewData["NombreUsuario"];
}
<div class="header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="float-left">
                    <div class="hamburger sidebar-toggle">
                        <span class="line"></span>
                        <span class="line"></span>
                        <span class="line"></span>
                    </div>
                </div>
                <div class="header-icon">
                    <i class="ti-user"> </i>
                    <span class="user-avatar">@User.Identity.Name  <span class="text-info">( @(User.IsInRole("Administrador") ? "Administrador" : "Moderador") )</span></span>
                </div>
                @using (Html.BeginForm("CerrarSesion", "Login", new { area = "UsuarioGeneral" }, FormMethod.Post))
                {
                    <div class="float-right">
                        <div class="header-icon">
                            <button class="btn btn-outline-danger user-avatar">
                                Cerrar sesión
                                <i class="ti-power-off"></i>
                            </button>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>