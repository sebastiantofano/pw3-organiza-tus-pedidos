@using DAL.Modelos
@model Cliente
@{
}
<div class="col-lg-8 p-r-0 title-margin-right">
    <div class="page-header">
        <div class="page-title">
            <h2><i class="ti-user text-default"></i> Nuevo Cliente </h2>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="form-validation">
            @using (Html.BeginForm("CrearCliente", "Clientes", FormMethod.Post))
            {
                <form class="form-valide">


                    <div class="form-group row align-items-center">
                        <label class="col-lg-1 col-form-label" asp-for="Nombre" >Nombre <span class="text-danger">*</span></label>
                        <div class="col-lg-5">
                            <input type="text" class="form-control" placeholder="Nombre" asp-for="Nombre" required>

                        </div>
                    </div>
                    <div class="form-group row align-items-center">
                        <label class="col-lg-1 col-form-label">Nro Cliente</label>
                        <div class="col-lg-1">
                            <input asp-for="Telefono" type="number" class="form-control" placeholder="    N°">
                        </div>
                        <label class="col-lg-1 col-form-label"  asp-for="Telefono" >Teléfono</label>
                        <div class="col-lg-3">
                            <input type="text" class="form-control "
                                   placeholder="Telefono">
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="input-group align-items-center">
                            <label class="col-lg-1 col-form-label val-email" asp-for="Email">E-mail</label>
                            <div class="input-group-prepend col-lg-10">
                                <span class="input-group-text">@@</span>
                                <input type="text" class="form-control" placeholder="E-mail" asp-for="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>

                            </div>
                        </div>
                    </div>
                    <div class="form-group row align-items-center">
                        <label class="col-lg-1 col-form-label"  asp-for="Cuit">CUIT</label>
                        <div class="col-lg-4">
                            <input type="text" class="form-control" placeholder="CUIT" asp-for="Cuit">
                        </div>
                        <label class="col-lg-1 col-form-label" asp-for="Direccion">Dirección</label>
                        <div class="col-lg-5">
                            <input type="text" class="form-control" placeholder="Dirección" asp-for="Direccion">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 d-flex align-items-center">
                            <button type="submit" class="btn btn-info col-lg-4 m-1">Agregar Cliente</button>
                            <button type="submit" class="btn btn-info col-lg-4 m-1">Agregar Cliente y Permanecer Aquí</button>
                            <a href="javascript:history.back(-1);" class="btn btn-default ml-auto ">Volver</a>
                        </div>
                    </div>
                </form>
            }
        </div>
    </div>
</div>


<style>
    input[type="number"] {
        -webkit-appearance: textfield !important;
        margin: 0;
        -moz-appearance: textfield !important;
    }
</style>
