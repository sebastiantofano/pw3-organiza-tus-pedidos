@using DAL.Modelos
@model Cliente


<div class="row">
    <div class="col-lg-8 p-r-0 title-margin-right">
        <div class="page-header">
            <div class="page-title">
                <h2><i class="ti-user text-default"></i> Nuevo Cliente </h2>
            </div>
        </div>
    </div>
</div>
<section id="main-content">
    <div class="row">
        <div class="col-lg-12">
            <div>
                <div class="card">
                    <form action="/Administrador/Clientes/AgregarCliente" method="POST">
                        <div class="card-body">
                            <div class="form-group row align-items-center">
                                <label asp-for="Nombre" class="col-lg-1 col-form-label">Nombre <span class="text-danger">*</span></label>
                                <div class="col-lg-5 input-group ml-3">
                                    <input asp-for="Nombre" type="text" name="Nombre" class="form-control" placeholder="Nombre">
                                </div>
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                            <div class="form-group row align-items-center">
                                    <label class="col-lg-1 col-form-label" asp-for="Numero">N° Cliente</label>
                                    <div class="col-lg-4">
                                        <input asp-for="Numero" type="number" class="form-control" placeholder="N°" name="Numero">
                                        <span asp-validation-for="Numero" class="text-danger"></span>
                                    </div>

                                    <label class="col-lg-1 col-form-label" asp-for="Telefono">Teléfono</label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control "
                                                placeholder="Telefono" name="Telefono" asp-for="Telefono">
                                        <span asp-validation-for="Telefono" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="input-group align-items-center">
                                        <label class="col-lg-1 col-form-label val-email" asp-for="Email">E-mail</label>
                                        <div class="input-group-prepend col-lg-11">
                                            <span class="input-group-text">@@</span>
                                            <input type="text" class="form-control" placeholder="E-mail" asp-for="Email" name="Email">
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row align-items-center">
                                    <label class="col-lg-1 col-form-label" asp-for="Cuit">CUIT</label>
                                    <div class="col-lg-4">
                                        <input type="text" class="form-control" placeholder="CUIT" asp-for="Cuit" name="Cuit">
                                        <span asp-validation-for="Cuit" class="text-danger"></span>
                                    </div>

                                    <label class="col-lg-0 col-form-label" asp-for="Direccion">Dirección</label>
                                    <div class="col-lg-6">
                                        <input type="text" class="form-control" placeholder="Dirección" asp-for="Direccion" name="Direccion">
                                    </div>
                                </div>
                            <div class="row">
                                <div class="col-lg-12 d-flex align-items-center">
                                    <button type="submit" class="btn btn-dark col-lg-4 m-1">Agregar Cliente</button>
                                    <a asp-area="Administrador" asp-controller="Clientes" asp-action="AdministrarClientes" class="btn btn-default ml-auto ">Volver</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    input[type="number"] {
        -webkit-appearance: textfield !important;
        margin: 0;
        -moz-appearance: textfield !important;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("~/Views/Shared/_ValidationScriptsPartial.cshtml");}

}
