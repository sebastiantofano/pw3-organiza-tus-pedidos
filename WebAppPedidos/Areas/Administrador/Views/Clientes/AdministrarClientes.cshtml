@using DAL.Modelos
@model List<Cliente>
@{
}

@section Styles{

    <link href="~/themes/assets/css/lib/data-table/buttons.bootstrap.min.css" rel="stylesheet" />
}

<div class="row">
    <div class="col-lg-8 p-r-0 title-margin-right">
        <div class="page-header">
            <div class="page-title">
                <h2><i class="ti-user text-default"></i> Administración de Clientes </h2>
            </div>
        </div>
    </div>
</div>
<!-- /# row -->

<section id="main-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="bootstrap-data-table-panel">

                    <div class="form-check ml-auto">
                        <input class="form-check-input  " type="checkbox" id="CheckboxOcultarEliminados" checked>
                        <label class="form-check-label">
                            Ocultar clientes eliminados
                        </label>
                    </div>


                    <br />
                    <div class="table-responsive">
                        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th class="col-md-1">N°</th>
                                    <th class="col-md-3">Nombre de Cliente</th>
                                    <th class="col-md-3">E-mail</th>
                                    <th class="col-md-2">CUIT</th>
                                    <th class="col-md-2">Telefono</th>
                                    <th class="col-md-2">Vigencia</th>
                                    <th class="col-md-3"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cliente in Model)
                                {

                                <tr>
                                    <td>@cliente.Numero</td>
                                    <td>@cliente.Nombre</td>
                                    <td>@cliente.Email</td>
                                    <td>@cliente.Cuit</td>
                                    <td>@cliente.Telefono</td>

                                    <td>
                                        <span class="badge badge-@(cliente.FechaBorrado == null ? "success" : "danger")">
                                            @(cliente.FechaBorrado == null ? "VIGENTE" : "ELIMINADO")
                                        </span>
                                    </td>

                                    <td>
                                        @if (cliente.FechaBorrado == null)
                                        {

                                            <a asp-area="Administrador" asp-controller="Clientes" asp-action="EditarCliente" asp-route-id="@cliente.IdCliente"
                                               class="btn btn-outline-info btn-flat btn-addon btn-sm mr-2">
                                                <i class="ti-pencil"></i>Editar
                                            </a>

                                        }
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 d-flex align-items-center">
            <a href="/Administrador/Clientes/AgregarCliente" class="btn btn-dark col-lg-5 m-1">Agregar Cliente</a>
            <a href="javascript:history.back(-1);" class="btn btn-default ml-auto ">Volver</a>
        </div>
    </div>
</section>


@section Scripts{

    <script src="~/themes/assets/js/lib/data-table/datatables.min.js"></script>
    <script src="~/themes/assets/js/lib/data-table/dataTables.buttons.min.js"></script>
    <script src="~/themes/assets/js/lib/data-table/buttons.flash.min.js"></script>
    <script src="~/themes/assets/js/lib/data-table/jszip.min.js"></script>
    <script src="~/themes/assets/js/lib/data-table/pdfmake.min.js"></script>
    <script src="~/themes/assets/js/lib/data-table/vfs_fonts.js"></script>
    <script src="~/themes/assets/js/lib/data-table/buttons.html5.min.js"></script>
    <script src="~/themes/assets/js/lib/data-table/buttons.print.min.js"></script>
    <script src="~/themes/assets/js/lib/data-table/datatables-init.js"></script>
}