@using ModeloDatosProvisorios.Modelos
@model List<Articulo>
@{

}

@section Styles{

    <link href="~/themes/assets/css/lib/data-table/buttons.bootstrap.min.css" rel="stylesheet" />
}

<div class="row">
    <div class="col-lg-8 p-r-0 title-margin-right">
        <div class="page-header">
            <div class="page-title">
                <h2>Administración de Artículos</h2>
            </div>
        </div>
    </div>
</div>
<!-- /# row -->
<section id="main-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="form-validation">
                        <form class="form-valide" action="/Administrador/Articulos/AgregarArticulo" method="POST">
                            <div class="card-title">
                                <h4>Agregar un nuevo artículo</h4>
                            </div>

                            <input type="hidden" name="CreadoPor" value="@User.Identity.Name" />

                            <div class="form-group row">
                                <label class="col-form-label m-auto" for="val-codigo">
                                    Código <span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-2">
                                    <input type="text" name="Codigo" class="form-control" id="val-codigo"
                                           placeholder="Código del Artículo">
                                    <span class="text-danger"></span>
                                </div>

                                <label class="col-form-label m-auto" for="Codigo">
                                    Descripción <span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-7">
                                    <input type="text" name="Descripcion" class="form-control" id="val-descripcion" placeholder="Descripción del Artículo" required>
                                </div>
                                <button type="submit" class="btn btn-success">
                                    Agregar
                                    Artículo
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-title">
                    <h4>Inventario de Artículos</h4>

                </div>
                <div class="card-body">
                    <div class="bootstrap-data-table-panel">
                        <div class="table-responsive">
                            <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th class="col-md-1">Código</th>
                                        <th class="col-md-5">Descripción</th>
                                        <th class="col-md-1">Vigencia</th>
                                        <th class="col-md-2"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var articulo in Model)
                                    {
                                        <tr>
                                            <td>@articulo.Codigo</td>
                                            <td>@articulo.Descripcion</td>
                                            <td>
                                                <span class="badge badge-@(articulo.FechaBorrado == null ? "info" : "danger")">
                                                    @(articulo.FechaBorrado == null ? "VIGENTE" : "ELIMINADO")
                                                </span>
                                            </td>
                                            <td class="row justify-content-between align-items-center">
                                                <a asp-area="Administrador" asp-controller="Articulos" asp-action="EditarArticulo" asp-route-id="@articulo.Id"
                                                   class="btn btn-warning btn-flat btn-addon btn-sm ml-4">
                                                    <i class="ti-pencil"></i>Editar
                                                </a>
                                                @if (articulo.FechaBorrado == null)
                                                {
                                                    <form method="POST" asp-area="Administrador" asp-controller="Articulos" asp-action="EliminarArticuloPorId" asp-route-id="@articulo.IdArticulo" asp-route-who="@User.Identity.Name">
                                                        <button type="submit" class="btn btn-danger btn-flat btn-addon btn-sm" onclick="return confirm('¿Usted está seguro que desea eliminar artículo? \nCódigo: @articulo.Codigo \nDescripción: @articulo.Descripcion')"> <i class="ti-close"></i>Eliminar</button>
                                                    </form>

                                                }

                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 d-flex align-items-center">
            <a asp-area="Administrador" asp-controller="Home" asp-action="Index" class="btn btn-default ml-auto ">Volver</a>
        </div>
    </div>
</section>



@section Scripts{

    <script src="~/themes/assets/js/lib/data-table/datatables.min.js"></script>
    <script src="~/themes/assets/js/lib/data-table/dataTables.buttons.min.js"></script>
    <script src="~/themes/assets/js/lib/data-table/buttons.flash.min.js"></script>
    <script src="~/themes/assets/js/lib/data-table/jszip.min.js"></script>
    <script src="~/themes/assets/js/lib/data-table/pdfmake.min.js"></script>
    <script src="~/themes/assets/js/lib/data-table/vfs_fonts.js"></script>
    <script src="~/themes/assets/js/lib/data-table/buttons.html5.min.js"></script>
    <script src="~/themes/assets/js/lib/data-table/buttons.print.min.js"></script>
    <script src="~/themes/assets/js/lib/data-table/datatables-init.js"></script>
}