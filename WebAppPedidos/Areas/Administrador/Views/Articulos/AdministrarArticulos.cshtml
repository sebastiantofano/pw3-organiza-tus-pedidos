@using ModeloDatosProvisorios.Modelos
@model List<Articulo>
@{

}
<div class="row">
    <div class="col-lg-8 p-r-0 title-margin-right">
        <div class="page-header">
            <div class="page-title">
                <h2>Administración de Artículos</h2>
            </div>
        </div>
    </div>
</div>
<!-- /# row -->
<section id="main-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">



                    <div class="form-validation">
                        <form class="form-valide" action="#" method="post">
                            <div class="card-title">
                                <h4>Agregar un nuevo artículo</h4>
                            </div>
                            <div class="form-group row">
                                <label class="col-form-label m-auto" for="val-codigo">
                                    Código <span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-2">
                                    <input type="text" class="form-control" id="val-codigo"
                                           name="val-codigo" placeholder="Código del Artículo" required>
                                </div>

                                <label class="col-form-label m-auto" for="val-descripcion">
                                    Descripción <span class="text-danger">*</span>
                                </label>
                                <div class="col-lg-7">
                                    <input type="text" class="form-control" id="val-descripcion"
                                           name="val-descripcion"
                                           placeholder="Ingrese Descripción del Artículo" required>
                                </div>
                                <button type="submit" class="btn btn-success">
                                    Agregar
                                    Artículo
                                </button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-title">
                    <h4>Inventario de Artículos</h4>

                </div>
                <div class="card-body">
                    <div class="bootstrap-data-table-panel">
                        <div class="table-responsive">
                            <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th class="col-md-1">Código</th>
                                        <th class="col-md-6">Descripción</th>
                                        <th class="col-md-1">Vigencia</th>
                                        <th class="col-md-2"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var articulo in Model)
                                    {
                                        <tr>
                                            <td>@articulo.Codigo</td>
                                            <td>@articulo.Descripcion</td>
                                            <td><span class="badge badge-@(articulo.FechaBorrado == null ? "success" : "danger")">
                                                @(articulo.FechaBorrado == null ? "VIGENTE" : "ELIMINADO")</span></td>
                                            <td>
                                                <a href="/Administrador/Articulos/EditarArticulo/@articulo.IdArticulo"
                                                   class="btn btn-warning btn-flat btn-addon btn-sm">
                                                    <i class="ti-pencil"></i>Editar
                                                </a>
                                                <a href=""
                                                   class="btn btn-danger btn-flat btn-addon btn-sm">
                                                    <i class="ti-close"></i>Eliminar
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 d-flex align-items-center">
            <a href="javascript:history.back(-1);" class="btn btn-default ml-auto ">Volver</a>
        </div>
    </div>
</section>


<script src="~/themes/assets/js/lib/data-table/datatables.min.js"></script>
<script src="~/themes/assets/js/lib/data-table/dataTables.buttons.min.js"></script>
<script src="~/themes/assets/js/lib/data-table/buttons.flash.min.js"></script>
<script src="~/themes/assets/js/lib/data-table/jszip.min.js"></script>
<script src="~/themes/assets/js/lib/data-table/pdfmake.min.js"></script>
<script src="~/themes/assets/js/lib/data-table/vfs_fonts.js"></script>
<script src="~/themes/assets/js/lib/data-table/buttons.html5.min.js"></script>
<script src="~/themes/assets/js/lib/data-table/buttons.print.min.js"></script>
<script src="~/themes/assets/js/lib/data-table/datatables-init.js"></script>